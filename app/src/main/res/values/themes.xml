<resources>
    <style name="Theme.altercard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryContainer">@color/main_fab_background_light</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/app_background_light</item>
        <item name="colorSurfaceVariant">@color/card_light</item>
        <item name="android:windowBackground">@color/app_background_light</item>

        <!-- Other colors -->
        <item name="colorControlNormal">@color/primary_light</item>

        <!-- Edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="RoundedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>
    </style>

    <style name="RoundedButton" parent="Widget.Material3.Button.TonalButton">
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>
        <item name="backgroundTint">@color/scan_button_background_light</item>
    </style>

    <style name="AddButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/add_button_background_light</item>
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>
    </style>

    <style name="RoundedOutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>
    </style>

    <style name="RoundedShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="NormalCaseButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Dialog.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">?attr/colorSurfaceVariant</item>
    </style>
</resources>