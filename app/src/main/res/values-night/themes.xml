<resources>
    <style name="Theme.altercard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/card_text_dark</item>
        <item name="colorPrimaryContainer">@color/button_background_dark</item>
        <item name="colorOnPrimaryContainer">@color/button_text_dark</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/app_background_dark</item>
        <item name="colorSurfaceVariant">@color/card_dark</item>
        <item name="colorOnSurfaceVariant">@color/card_text_dark</item>
        <item name="colorOnSurface">@color/card_text_dark</item>
        <item name="android:windowBackground">@color/app_background_dark</item>

        <!-- Other colors -->
        <item name="colorControlNormal">@color/card_text_dark</item>

        <!-- Edge-to-edge -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="RoundedButton" parent="Widget.Material3.Button.TonalButton">
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>
        <item name="backgroundTint">@color/scan_button_background_dark</item>
        <item name="android:textColor">@color/scan_button_text_dark</item>
        <item name="iconTint">@android:color/white</item>
    </style>

    <style name="AddButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/add_button_background_dark</item>
        <item name="shapeAppearanceOverlay">@style/RoundedShapeAppearance</item>
    </style>

    <style name="Dialog.AlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/card_dark</item>
    </style>
</resources>